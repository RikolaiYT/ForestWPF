<Window x:Class="ForestWPF.Views.AddEditTreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить дерево" Height="380" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Вид" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Species, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Высота (м)" FontWeight="SemiBold"/>
            <TextBox Text="{Binding HeightText, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Диаметр (см)" FontWeight="SemiBold"/>
            <TextBox Text="{Binding DiameterText, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Возраст" FontWeight="SemiBold"/>
            <TextBox Text="{Binding AgeText, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Тип леса" FontWeight="SemiBold"/>
            <ComboBox SelectedValue="{Binding WoodType}" SelectedValuePath="Content">
                <ComboBoxItem>хвойный</ComboBoxItem>
                <ComboBoxItem>лиственный</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button Content="ОК" Width="100" Height="35" Margin="5" IsDefault="True"
                    Command="{Binding OkCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Отмена" Width="100" Height="35" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>